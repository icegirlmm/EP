<!--pages/password/password.wxml-->
<nav title="设置密码"/>
<!--输入钱包密码--> 
<view class='password'>
<text>设置支付密码:</text>
<input type='number' password = "{{true}}" bindinput='set_password' maxlength="6" placeholder='请输入6位数字密码' placeholder-class="input-placeholder"></input>
</view>
<view class='password'>
<text>确认密码:</text>
<input type='number' password = "{{true}}" bindinput='sure_password' maxlength="6" placeholder='请输入6位数字密码'  placeholder-class="input-placeholder"></input>
</view>
<button bindtap='setPassword'>确定</button>
