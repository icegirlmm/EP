/* pages/share/share.wxss */
.head {
  width: 486rpx;
  height: 104rpx;
  margin-left: 40rpx;
  margin-top: 48rpx;
  margin-bottom: 40rpx;
}

.head-img {
  float: left;
  width: 104rpx;
  height: 104rpx;
}

.head-img image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.head-text {
  height: 104rpx;
  margin-left: 124rpx;
  line-height: 104rpx;
  display: flex;
  align-items: center;
}

text {
  display: block;
}

.h1 {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 36rpx;
}

.h2 {
  width: 450rpx;
  font-size: 32rpx;
  line-height: 32rpx;
}

.codeimg {
  background: #fff;
  width: 670rpx;
  height: 670rpx;
  margin: 0 auto 60rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.codeimg image {
  width: 500rpx;
  height: 500rpx;
}

button {
  width: 670rpx;
  height: 100rpx;
  border: 0;
  font-weight: bolder;
  font-size: 32rpx;
  letter-spacing: 11.2rpx;
  line-height: 100rpx;
  border-radius: 10px;
}

button::after {
  border: none;
}

.share {
  background: #fff;
  margin-bottom: 24rpx;
  color: #000;
}

.save {
  background: #9ADC93;
  color: #fff;
}

.save.button-hover {
  background: #fff;
}
.code{
  position: relative;
}
.word{
  position: absolute;
  font-size: 28rpx;
  margin: 0 276rpx;
  text-align: center;
  top: 608rpx;
}